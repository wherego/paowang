<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="#ffd3dde6" />

            <corners android:bottomLeftRadius="4.0dip" android:bottomRightRadius="4.0dip" android:topLeftRadius="4.0dip" android:topRightRadius="4.0dip" />

            <gradient android:angle="270.0" android:endColor="#ff0e9379" android:startColor="#ff0e9379" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="#ff0e9379" android:startColor="#ff0e9379" />

            <stroke android:width="1.0px" android:color="#ffd3dde6" />

            <corners android:bottomLeftRadius="4.0dip" android:bottomRightRadius="4.0dip" android:topLeftRadius="4.0dip" android:topRightRadius="4.0dip" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/colorAccent" android:startColor="@color/colorAccent" />

            <stroke android:width="1.0px" android:color="#ffd3dde6" />

            <corners android:bottomLeftRadius="4.0dip" android:bottomRightRadius="4.0dip" android:topLeftRadius="4.0dip" android:topRightRadius="4.0dip" />
        </shape>

    </item>


</selector>